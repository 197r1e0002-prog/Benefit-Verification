        <name>IterateThroughChildServiceAppointments</name>
        <label>Iterate Through Child Service Appointments</label>
        <locationX>176</locationX>
        <locationY>566</locationY>
        <collectionReference>GetChildServiceAppointmentRecords</collectionReference>
        <iterationOrder>Asc</iterationOrder>
        <nextValueConnector>
            <targetReference>SetChildServiceAppointmentStatus</targetReference>
        </nextValueConnector>
        <noMoreValuesConnector>
            <targetReference>UpdateChildServiceAppointments</targetReference>
        </noMoreValuesConnector>
    </loops>
    <processMetadataValues>
