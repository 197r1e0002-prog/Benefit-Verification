    <assignments>
        <description>Adds the current child service appointment in the loop to the UpdatedServiceAppointments record collection.</description>
        <name>AddChildServiceAppointmentToCollection</name>
        <label>Add Child Service Appointment To Collection</label>
        <locationX>264</locationX>
        <locationY>782</locationY>
        <assignmentItems>
            <assignToReference>UpdatedServiceAppointments</assignToReference>
            <operator>Add</operator>
            <value>
                <elementReference>IterateThroughChildServiceAppointments</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>IterateThroughChildServiceAppointments</targetReference>
        </connector>
    </assignments>
    <assignments>
        <description>Assigns a status of Scheduled to the current item in the loop.</description>
        <name>SetChildServiceAppointmentStatus</name>
        <label>Set Child Service Appointment Status</label>
        <locationX>264</locationX>
        <locationY>674</locationY>
        <assignmentItems>
            <assignToReference>IterateThroughChildServiceAppointments.Status</assignToReference>
