            </value>
        </assignmentItems>
        <connector>
            <targetReference>AddChildServiceAppointmentToCollection</targetReference>
        </connector>
    </assignments>
    <environments>Default</environments>
    <interviewLabel>Confirm Slots {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Confirm Slots</label>
