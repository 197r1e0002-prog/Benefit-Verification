        <description>Stores the prefix that’s added to the body of the notification.</description>
        <name>notificationBodyPrefix</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
