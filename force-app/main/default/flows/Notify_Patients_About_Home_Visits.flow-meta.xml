            <stringValue>Home visit request wasn&apos;t approved</stringValue>
        </value>
    </variables>
    <variables>
        <description>Stores the ID of the custom notification type record returned by GetCustomNotificationType.</description>
        <name>PatientRequestNotificationTypeId</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
    </variables>
    <variables>
        <description>Stores the ID of the flow user.</description>
        <name>RecipientIds</name>
        <dataType>String</dataType>
        <isCollection>true</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
    </variables>
    <variables>
        <description>Stores the request type of the party appointment request record that’s passed into the flow.</description>
        <name>RequestType</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
        <value>
            <elementReference>$Record.RequestType</elementReference>
        </value>
    </variables>
</Flow>
